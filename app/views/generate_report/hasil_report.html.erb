<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    >

    <style>
    @page {
      size: A4;
      margin: 2cm;
    }
    
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    table th, table td {
      border: 1px solid #000;
      padding: 8px;
      text-align: left;
    }

    table th {
      background-color: #f2f2f2;
    }

    .signature {
      position: absolute;
      bottom: 20px;
      right: 20px;
    }
    @media print {
        body {
            counter-reset: page;
        }

        .page-marker::after {
            counter-increment: page;
            content: counter(page);
            display: none;
        }

        .page-marker:last-child::after {
            display: block;
            position: absolute;
            bottom: 0;
            right: -9px;
        }
    }
    </style>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    >
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css"
    >
    <link
      rel="stylesheet"
      href="https://unpkg.com/bootstrap-table@1.21.4/dist/bootstrap-table.min.css"
    >
  </head>
  <body>
  <img src="https://dc718.4shared.com/img/FQmyhq_6jq/s23/1895d90f3c0/kop" alt="Logo" style="width: 100%; margin-top: -5px;">
  <br>
    <h3 style="text-align:center; margin-top: 30px;">Data Ranking Karyawan Terbaik</h3>
    <table style="margin-top:50px;">
     <thead>
              <tr>
                <th>Ranking.</th>
                <th>Nama Karyawan</th>
                <th>Nilai Akhir</th>
                
              </tr>
            </thead>
            <tbody class="table-border-bottom-0">
              <% @data.each_with_index do |item, index| %>
                <tr>
                  <td><i class="fab fa-angular fa-lg text-danger me-3"></i>
                    <strong><%= index + 1 %></strong></td>
                  <td> <%= employeeName(item.id_employee) %> </td>
                 
                  <td> <%= item.nilai_akhir %> </td>
               
                </tr>
              <% end %>
            </tbody>
    </table>

  <div class="page-marker">
    <div style="margin-left: 500px;">
      <img src="https://dc718.4shared.com/img/PTFq4unhjq/s23/1895d90e808/Ttd-removebg-preview__1_" alt="Logo" style="width: 120%;">
    </div>
  </div>


  <script src="https://cdn.jsdelivr.net/npm/jquery/dist/jquery.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://unpkg.com/bootstrap-table@1.21.4/dist/bootstrap-table.min.js"
    ></script>
  </body>
</html>
