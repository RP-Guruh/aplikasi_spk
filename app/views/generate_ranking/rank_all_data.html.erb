<!-- Layout container -->
<div class="layout-page">
  <!-- Content wrapper -->
  <div class="content-wrapper">
    <% if flash[:success] %>
    <div style="margin-top: 20px; position: fixed; top:20px; right:20px;" class="bs-toast toast fade show bg-success" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="toast-header">
        <i class="bx bx-bell me-2"></i>
        <div class="me-auto fw-semibold">Message</div>
        <small><%= @save_time.nil? ? '' : "#{time_ago_in_words(@save_time)} ago" %></small>
        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
      <div class="toast-body">
        <%= flash[:success] %>
      </div>
    </div>
    <% end %>

    <% if flash[:danger] %>
    <div style="margin-top: 20px; position: fixed; top:20px; right:20px;" class="bs-toast toast fade show bg-danger" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="toast-header">
        <i class="bx bx-bell me-2"></i>
        <div class="me-auto fw-semibold">Message</div>
        <small><%= @save_time.nil? ? '' : "#{time_ago_in_words(@save_time)} ago" %></small>
        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
      <div class="toast-body">
        <%= flash[:danger] %>
      </div>
    </div>
    <% end %>

    
    <!-- Content -->
    <div class="container-xxl flex-grow-1 container-p-y">
      <div class="card">
        <h5 class="card-header">Employee data</h5>

        <div class="table-responsive text-nowrap">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>No.</th>
                <th>Nama Karyawan</th>
                <th>Kriteria</th>
                <th>Nilai</th>
                <th>Status</th>
                <th>Dibuat pada</th>
              </tr>
            </thead>
            <tbody class="table-border-bottom-0">
              <% @datasrc.each_with_index do |data, index| %>
                <tr>
                  <td><i class="fab fa-angular fa-lg text-danger me-3"></i>
                    <strong><%= index + 1 %></strong></td>
                  <td> <%= employeeName(data.id_employee) %> </td>
                  <td> <%= criteriaName(data.id_kriteria) %></td>
                  <td> <%= data.nilai %> </td>
                  <td> <%= data.status %> </td>
                  <td> <%= data.created_at %> </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <!-- / Content --> <!-- FOOTER -->
    <%= render "partials/footer" %>
    <%= yield %>
    <!-- end footer -->
    <div class="content-backdrop fade"></div>
  </div>
  <!-- Content wrapper -->
</div>

<!-- / Layout page -->
<div class="buy-now">
    <a style="color:white;"
      target="_blank"
      class="btn btn-danger btn-buy-now"
      data-bs-toggle="modal"
      data-bs-target="#modalCenter"
    >
      <i class="menu-icon tf-icons bx bx-comment-add"></i>Lakukan Perhitungan</a>
  </div>