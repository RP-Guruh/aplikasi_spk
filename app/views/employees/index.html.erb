<!-- Layout container -->
<div class="layout-page">
   <!-- Content wrapper -->
   <div class="content-wrapper">
      <!-- Content -->

      <div class="container-xxl flex-grow-1 container-p-y">
         <div class="card">
            <h5 class="card-header">Employment Data</h5>
           
            <div class="table-responsive text-nowrap">
               <table class="table table-hover">
                  <thead>
                     <tr>
                        <th>No.</th>
                        <th>Full Name</th>
                        <th>Position</th>
                        <th>Departement</th>
                        <th>Status</th>
                        <th>Actions</th>
                     </tr>
                  </thead>
                  <tbody class="table-border-bottom-0">
                     <% @karyawan.each do |kry| %>
                     <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong><%= kry.id  %></strong></td>
                        <td><%= kry.first_name %> <%= kry.last_name %></td>
                        <td>
                           <%= kry.position %>
                        </td>
                        <td>
                           <%= kry.department %>
                        </td>
                        <td>
                            <% if kry.employment_status == 'Temporary' %>
                                 <span class="badge bg-label-primary me-1"> <%= kry.employment_status %></span>
                            <% end %>
                            <% if kry.employment_status == 'Internship' %>
                                <span class="badge bg-label-danger me-1"> <%= kry.employment_status %></span>
                            <% end %>
                            <% if kry.employment_status == 'Full-time' %>
                                 <span class="badge bg-label-success me-1"> <%= kry.employment_status %></span>
                            <% end %>
                            <% if kry.employment_status == 'Commission' %>
                                 <span class="badge bg-label-secondary me-1"> <%= kry.employment_status %></span>
                            <% end %>
                            <% if kry.employment_status == 'Contract' %>
                                 <span class="badge bg-label-info me-1"> <%= kry.employment_status %></span>
                            <% end %>
                        </td>
                        <td>
                           <div class="dropdown">
                              <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                              <i class="bx bx-dots-vertical-rounded"></i>
                              </button>
                              <div class="dropdown-menu">
                                 <a class="dropdown-item" href="javascript:void(0);"
                                    ><i class="bx bx-edit-alt me-1"></i> Edit</a
                                    >
                                 <a class="dropdown-item" href="javascript:void(0);"
                                    ><i class="bx bx-trash me-1"></i> Delete</a
                                    >
                              </div>
                           </div>
                        </td>
                     </tr>
                     <% end %> 
                  </tbody>
               </table>
            </div>
         </div>
      </div>
      <!-- / Content -->
      <!-- FOOTER -->
      <%= render 'partials/footer' %> <%= yield %>
      <!-- end footer -->
      <div class="content-backdrop fade"></div>
   </div>
   <!-- Content wrapper -->
</div>
<!-- / Layout page -->

